# Test Environment Configuration
# Generated by BMAD testarch-framework workflow

# Test environment (local, staging, prod)
TEST_ENV=local

# Base URL for application
BASE_URL=http://localhost:3000

# API base URL (usually BASE_URL + /api)
API_URL=http://localhost:3000/api

# Test user credentials (for API authentication)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Service API key (for service-to-service authentication)
SERVICE_API_KEY=your-service-api-key

# Internal service URL
INTERNAL_SERVICE_URL=http://localhost:3000

# Playwright configuration
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_SLOW_MO=0

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secure-random-secret-min-32-chars

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# PostgreSQL connection string with connection pooling
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?[options]
#
# Options:
#   - connection_limit: Max connections in pool (required for production)
#   - pool_mode: transaction (default) or statement
#   - statement_cache_size: Number of cached statements
#
# Examples:
#   Local:  postgresql://postgres:postgres@localhost:5432/nba_analyst
#   Prod:   postgresql://user:pass@host:5432/nba_analyst?connection_limit=10&pool_mode=transaction
#
DATABASE_URL="postgresql://user:password@localhost:5432/nba_analyst"

# =====================================================
# MFA CONFIGURATION
# =====================================================
MFA_ENCRYPTION_KEY=your-256-bit-key-here-min-32-chars-long-for-mfa
MFA_ISSUER_NAME=NBA-Analyst
MFA_ENFORCE_FOR_ROLES=admin,ops
MFA_GRACE_PERIOD_MINUTES=15
MFA_REMOVAL_COOLDOWN_HOURS=24

# =====================================================
# B2B API CONFIGURATION
# =====================================================
# Development API key for B2B API testing (do not use in production)
B2B_DEV_API_KEY=test-api-key-for-atdd

# =====================================================
# SECURITY HARDENING FLAGS (DEV ONLY)
# =====================================================
# Keep these disabled by default. Enable only for local debugging.
ALLOW_UNAUTHENTICATED_DECISIONS_DEV=false
LEGACY_ML_SCRIPTS=false
